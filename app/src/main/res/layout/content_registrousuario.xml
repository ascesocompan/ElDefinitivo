<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cecyred.ww.cecyred.REGISTROUSUARIO"
    tools:showIn="@layout/activity_registrousuario">

    <EditText
        android:id="@+id/TXT_NOMBRE"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Nombre Usuario:"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/TXT_CONTRA"
        android:layout_width="356dp"
        android:layout_height="59dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:hint="Contraseña:"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TXT_NOMBRE"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/TXT_BOLETA"
        android:layout_width="357dp"
        android:layout_height="70dp"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="Boleta:    *Opcional"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TXT_CONTRA"
        tools:ignore="MissingConstraints"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="2dp" />

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="135dp"
        android:layout_height="45dp"
        android:layout_marginEnd="112dp"
        android:layout_marginStart="113dp"
        android:layout_marginTop="18dp"
        android:background="@color/colorPrimary"
        android:onClick="registro"
        android:text="Registrarse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar2"
        tools:ignore="MissingConstraints"
        android:layout_marginRight="112dp"
        android:layout_marginLeft="113dp" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="181dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="21dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/terminosycon"
        android:layout_marginLeft="155dp"
        android:layout_marginRight="181dp" />

    <CheckBox
        android:id="@+id/Terminos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:text="He leído y acepto los terminos y condiciones."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TXT_BOLETA" />

    <Button
        android:id="@+id/terminosycon"
        android:layout_width="252dp"
        android:layout_height="35dp"
        android:layout_marginEnd="75dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="19dp"
        android:background="@color/colorPrimary"
        android:onClick="terminos"
        android:text="Leer terminos y condiciones."
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Terminos"
        android:layout_marginLeft="57dp"
        android:layout_marginRight="75dp" />
</android.support.constraint.ConstraintLayout>
